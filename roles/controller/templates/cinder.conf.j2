[DEFAULT]
logdir = /var/log/cinder
state_path = /var/lib/cinder
lock_path = /var/lib/cinder/tmp
volumes_dir = /etc/cinder/volumes
iscsi_helper = tgtadm
iscsi_ip_address = {{ hostvars[inventory_hostname]['ansible_'+iface].ipv4.address }}
sql_connection = mysql://cinder:{{ cinder_db_pass }}@localhost/cinder
rpc_backend = cinder.openstack.common.rpc.impl_qpid
rootwrap_config = /etc/cinder/rootwrap.conf
auth_strategy = keystone

volume_driver=cinder.volume.drivers.rbd.RBDDriver
rbd_pool=volumes
glance_api_version=2
# the RADOS client name for accessing rbd volumes - only set
# when using cephx authentication (string value)
rbd_user=volumes

# path to the ceph configuration file to use (string value)
rbd_ceph_conf=/etc/ceph/ceph.conf

# flatten volumes created from snapshots to remove dependency
# (boolean value)
#rbd_flatten_volume_from_snapshot=false


#WARNING ANSIBLE DOES NOT PUT THIS UUID IN AUTOMATICALLY
# the libvirt uuid of the secret for the rbd_uservolumes
# (string value)
#rbd_secret_uuid=<None>


[keystone_authtoken]
admin_tenant_name = admin
admin_user = admin
admin_password = {{ admin_pass }}
auth_host = localhost
auth_port = 35357
auth_protocol = http
signing_dirname = /tmp/keystone-signing-cinder
